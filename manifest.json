{
    "manifest_version": 3,
    "name": "Extension Export Manager",
    "version": "1.0",
    "description": "List installed extensions and export them to an HTML file for easy re-installation.",
    "permissions": [
        "management"
    ],
    "action": {
        "default_title": "Manage Extensions",
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}